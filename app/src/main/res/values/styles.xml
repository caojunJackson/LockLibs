<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.Swirl" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="swirl_ridgeColor">?android:attr/textColorSecondary</item>
        <item name="swirl_errorColor">@color/red</item>
        <item name="swirl_successColor">@color/colorPrimary</item>
    </style>
</resources>
